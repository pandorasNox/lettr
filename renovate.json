{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "config:best-practices",
    ":pinDependencies"
  ],
  "configMigration": true,
  "packageRules": [
    {
      "matchDatasources": ["golang-version"],
      "groupName": "golangVersionUpdate"
    },
    {
      "matchManagers": ["gomod"],
      "matchDepNames": ["go"],
      "matchDepTypes": ["golang"],
      "rangeStrategy": "bump",
      "groupName": "golangVersionUpdate"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["golang"],
      "groupName": "golangVersionUpdate"
    },
    {
      "matchManagers": ["github-actions"],
      "matchPackageNames": [
        "actions/go-versions"
      ],
      "groupName": "golangVersionUpdate"
    }
  ],
  "postUpdateOptions": ["gomodUpdateImportPaths"],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update _IMAGE variables in shell scripts",
      "fileMatch": [
        "scripts/checks/shellcheck.sh"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-]+?)(?: versioning=(?<versioning>[a-z-]+?))?\\s.+?_IMAGE=(?<depName>.+?):(?<currentValue>.+?)(@(?<currentDigest>.+?))?(;)?\\s"
      ]
    }
  ]
}


